generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model FileMetadata {
  id             String   @id @default(cuid())
  name           String
  size           Int
  type           String?
  uploadTime     DateTime @default(now())
  rulesUsed      Json?
  classification Json?
  overallScore   Float?
  datasetSummary String?
  fileUrl        String?
}
